<style>
  .admin-show{
    margin-top: 120px;
    margin-bottom: 50px;
  }

  .admin-show h4{
    letter-spacing: 2px;
    line-height: 30px;
    color: black;
  }

  .admin-show h5{
    color: black;
  }
</style>

<section class="admin-show">
  <div class="container">
    <div class="col-md-12">
      <div style="margin-bottom: 15px;">
        <%= link_to '回到首頁' ,root_path ,class:"btn btn-warning" , style:"width:9%;padding:6px;"%>
      </div>

      <div class="panel panel-primary">
        <div class="panel-heading panel-title">
          <strong><%= @blog.title %></strong>
        </div>

        <div class="panel-body">
          <h4><%= raw @blog.description %></h4>
        </div>

        <div class="panel-footer">
          <h5>發布日期：<%= @blog.date %></h5>
        </div>
      </div>
    </div>
  </div>
</section>
